<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9F7">

    <!-- Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_mosque"
        android:padding="22dp"
        android:background="#FFFFFF"
        app:shapeAppearanceOverlay="@style/CircleImage"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nama -->
    <TextView
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sastro dumejo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#184D47"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Email bawah nama -->
    <TextView
        android:id="@+id/txtEmailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sastrowaluyo@gmail.com"
        android:textSize="14sp"
        android:textColor="#7C7C7C"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/txtNama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label -->
    <TextView
        android:id="@+id/labelUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email atau Nama Pengguna"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtEmailHeader"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CARD TEMPLATE (dipakai untuk semua card) -->
    <!-- Card NAMA -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#0E8059"
        app:layout_constraintTop_toBottomOf="@id/labelUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="18dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:tint="#FFFFFF"
                android:src="@drawable/ic_profile"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nama"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtNamaValue"
                    android:text="Sastro Dumejo"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD EMAIL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#0E8059"
        app:layout_constraintTop_toBottomOf="@id/cardNama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="18dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_email"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Email"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtEmailValue"
                    android:text="sastrowaluyo@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CARD LOKASI -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLokasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="#0E8059"
        app:layout_constraintTop_toBottomOf="@id/cardEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="18dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_location"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Lokasi"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtLokasiValue"
                    android:text="Madiun, Indonesia"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
